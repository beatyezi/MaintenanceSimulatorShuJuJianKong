                     />
            -->
        </ScrollViewer>
        <Button x:Name="copyRight_btnOk" Content="好" HorizontalAlignment="Left" Height="25.459" Margin="407.237,289.541,0,0" VerticalAlignment="Top" Width="82.763" Click="copyRight_btnOk_Click"/>

    </Grid>
